# Discord Summary Bot â€” Configuration
# -----------------------------------------------
# Copy this file to .env and fill in the values.

# Discord bot token (from https://discord.com/developers/applications)
DISCORD_TOKEN=your_discord_bot_token_here

# Anthropic API key (from https://console.anthropic.com)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Channel name where summaries will be posted (no #)
SUMMARY_CHANNEL=daily-summary

# Time to post daily summary (UTC, 24h format)
SUMMARY_HOUR=23
SUMMARY_MINUTE=55

# Claude model to use
CLAUDE_MODEL=claude-sonnet-4-5-20250929

# Max ~tokens to include per channel (prevents giant prompts)
MAX_TOKENS_PER_CHANNEL=8000

# Comma-separated channel names to ignore (no #)
IGNORED_CHANNELS=bot-spam,off-topic
